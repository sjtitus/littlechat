{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "App Build",
            "identifier": "AppBuild",
            "type": "typescript",
            "tsconfig": "app\\tsconfig.json",
            "problemMatcher": [ "$tsc" ]
        },
        {
            "label": "Backend build",
            "identifier": "BackendBuild",
            "type": "typescript",
            "tsconfig": "backend\\tsconfig.json",
            "problemMatcher": [ "$tsc" ]
        },
        {
            "label": "App Start",
            "identifier": "AppStart",
            "type": "npm",
            "script": "start",
            "path": "app/",
            "problemMatcher": []
        },
        {
            "label": "Backend Watch",
            "identifier": "BackendWatch",
            "type": "typescript",
            "tsconfig": "backend\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [ "$tsc-watch" ]
        }
    ]
}